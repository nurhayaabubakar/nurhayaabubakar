#include<iostream>

using namespace std;

int main (){
	
	cout <<"a | b  | c |<<endl; 
	cout <<"0 | 0 | 0 | <<endl;
    cout <<"0 | 0 | 1 | <<endl;
    cout <<"0 | 1 | 0 | <<endl;
    cout <<"0 | 1 | 1 | <<endl;
    cout <<"1 | 0 | 0 | <<endl;
    cout <<"1 | 0 | 1 | <<endl;
    cout <<"1 | 1 | 0 | <<endl;
    cout <<"1 | 1 | 1 | <<endl;
    
    cout << |A or B | A or C |  F1 = ( A or B ) and (A or C);
    cout << ( 0 || 0 ) <<"       "<<(0 || 0)<<"        "<<(0 || 0 && 0 || 0)endl;
    cout << ( 0 || 0 ) <<"       "<<(0 || 1)<<"        "<<(0 || 0 && 0 || 1)endl;
    cout << ( 0 || 1 ) <<"       "<<(0 || 1)<<"        "<<(0 || 1 && 0 || 0)endl;
    cout << ( 1 || 1 ) <<"       "<<(1 || 0)<<"        "<<(0 || 1 && 0 || 1)endl;
    cout << ( 1 || 0 ) <<"       "<<(1 || 1)<<"        "<<(1 || 0 && 1 || 0)endl;
    cout << ( 1 || 0 ) <<"       "<<(1 || 0)<<"        "<<(1 || 0 && 1 || 1)endl;
    cout << ( 1 || 1 ) <<"       "<<(1 || 1)<<"        "<<(1 || 0 && 1 || 0)endl;
    cout << ( 1 || 1 ) <<"       "<<(1 || 0)<<"        "<<(1 || 0 && 1 || 1)endl;
    
    return 0;
        
}
